<div class="container">
  <table class="table table-striped table-borderless table-hover concourse-table">
    <thead>
      <tr>
        <th> name </th>
        <th> updated seconds ago </th>
        <th> created at </th>
      </tr>
    </thead>
    <tbody>
      <% @concourses.each do |c| %>
        <tr>
        <td><%= c.name %></td>
        <td><%= (Time.now - c.updated_at).to_i %> seconds ago</td>
        <td><%= c.created_at.strftime("%m/%d/%Y") %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
